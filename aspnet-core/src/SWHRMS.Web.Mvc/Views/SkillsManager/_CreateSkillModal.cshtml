@using SWHRMS.Web.Models.Common.Modals
@model SWHRMS.Web.Models.Skills.EditSkillModalViewModel
@{
    Layout = null;
}
@Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateSkill")))

<div class="modal-body">
    <form name="SkillCreateForm" role="form" novalidate class="form-validation">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line">
                        <input id="editdetail" type="text" name="SkillName" value="" maxlength="256" class="validate form-control">
                        <label for="editdetail" class="form-label">@L("SkillName")</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="form-group form-float">
                    <div class="form-line no-line" id="cp2" data-color="#fff">
                        <input id="colorCode" type="text" name="ColorCode" value="#fff" maxlength="256" class="validate form-control">
                        <label for="colorCode" class="form-label">@L("SkillColor")</label>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")

<script src="~/view-resources/Views/SkillManage/_CreateSkillModal.js" asp-append-version="true"></script>